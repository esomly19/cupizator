generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique @db.VarChar(255)
  password  String     @db.VarChar(255)
  firstname String     @db.VarChar(255)
  lastname  String     @db.VarChar(255)
  potId     Int?
  Group     Group[]
  Pot       Pot?       @relation(fields: [potId], references: [id])
  Bet       Bet[]
  Position  Position[]
}

model Pot {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  tag       String   @db.VarChar(255)
  state     State    @default(CLOSED)
  managerId Int?
  type      PotType?
  Group     Group[]
  members   User[]
}

model Group {
  id        Int     @id @default(autoincrement())
  name      String  @db.VarChar(255)
  price     Int
  managerId Int
  potId     Int?
  state     State   @default(CREATED)
  pot       Pot?    @relation(fields: [potId], references: [id])
  bets      Bet[]
  matchs    Match[]
  members   User[]
}

model Position {
  id     Int  @id @default(autoincrement())
  userId Int
  score  Int?
  user   User @relation(fields: [userId], references: [id])
}

model Bet {
  id        Int      @id @default(autoincrement())
  score     Int?
  vainqueur String?  @db.VarChar(255)
  type      TypeBet?
  userId    Int
  groupId   Int
  group     Group    @relation(fields: [groupId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Match {
  id      Int      @id @default(autoincrement())
  date    DateTime
  team1   String?
  team2   String?
  score1  Int?
  score2  Int?
  groupId Int?
  Group   Group?   @relation(fields: [groupId], references: [id])
}

enum Role {
  INVITE
  ADMIN
}

enum TypeBet {
  SCORE
  VAINQUEUR
}

enum PotType {
  MONEY
  BASIC
}

enum State {
  CREATED
  UNCONFIRMED
  CONFIRMED
  OPENED
  CLOSED
  ENDED
}
